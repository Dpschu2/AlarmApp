<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/locationAlarm"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="deanschulz.alarmapp.AlarmFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="center"
        app:backgroundTint="?attr/colorButtonNormal"
        app:elevation="13dp"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        app:srcCompat="@drawable/ic_add_alarm_black_24dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/minutesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/floatingActionButton"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="24dp"
        android:text="Minutes"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/minutes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minutesText"
        android:layout_alignBottom="@+id/minutesText"
        android:layout_toEndOf="@+id/floatingActionButton"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="2"
        android:inputType="numberSigned"
        android:maxLength="3" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minutes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:textSize="24dp" />

</RelativeLayout>